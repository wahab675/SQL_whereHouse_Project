/*
created database and tables 
This procedure loads data into the silver schema from external csv file.

It performs the following actions:
-truncates the silver table before loading data.
uses the  bulk 'Bulk insert' command to load data from csv files to sliver tables
*/

IF OBJECT_ID('silver.crm_cust_info', 'U') IS NOT NULL DROP TABLE silver.crm_cust_info;
IF OBJECT_ID('silver.prd_info', 'U') IS NOT NULL DROP TABLE silver.prd_info;
IF OBJECT_ID('silver.sales_details', 'U') IS NOT NULL DROP TABLE silver.sales_details;
IF OBJECT_ID('silver.cust_az12', 'U') IS NOT NULL DROP TABLE silver.cust_az12;
IF OBJECT_ID('silver.loc_a101', 'U') IS NOT NULL DROP TABLE silver.loc_a101;
IF OBJECT_ID('silver.px_cat_g1v2', 'U') IS NOT NULL DROP TABLE silver.px_cat_g1v2;

-- Step 2: create the table inside that database
CREATE TABLE silver.crm_cust_info (
  cst_id INT,
  cst_key VARCHAR(50),
  cst_firstname VARCHAR(50),
  cst_lastname VARCHAR(50),
  cst_marital_status VARCHAR(50),
  cst_gndr VARCHAR(50),
  cst_create_date DATE,
  dwh_create_date Datetime2 default getdate()
);




CREATE TABLE silver.Prd_info (
    prd_id INT,
    cat_id VARCHAR(50),
    prd_key VARCHAR(50),
    prd_nm VARCHAR(50),
    prd_cost INT,
    prd_line VARCHAR(50),
    prd_start_dt DATE,
    prd_end_dt DATE,
    dwh_create_date DATETIME2 DEFAULT GETDATE()
);


create table silver.sales_details(
sls_ord_num varchar(50),
sls_prd_key VARCHAR(40),
sls_cust_id int,
sls_order_dt int,
sls_ship_dt int,
sls_due_dt int,
sls_sales int,
sls_quantity int,
sls_price int,
dwh_create_date Datetime2 default getdate()
);
create table silver.CUST_AZ12(
CID varchar(50),
bdate date,
gen varchar(50),
dwh_create_date Datetime2 default getdate()
);

create table silver.LOC_A101(
cid VARChar(50),
cntry Varchar(50),
dwh_create_date Datetime2 default getdate()
);

create table silver.PX_CAT_G1V2(
id varchar(50),
cat varchar(50),
subacat varchar(50),
maintenance nvarchar(50),
dwh_create_date Datetime2 default getdate()
);


